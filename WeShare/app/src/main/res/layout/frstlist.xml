<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="205dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="195dp"
        android:background="#CBF3CD"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/categoryIMG"
            android:layout_width="79dp"
            android:layout_height="78dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/categoryL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>